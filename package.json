{
  "name": "emerson-game",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:2d": "npm --workspace ./apps/duckworld-2d run dev",
    "dev:3d": "npm --workspace ./apps/duckworld-3d run dev",
    "build:2d": "npm --workspace ./apps/duckworld-2d run build",
    "build:3d": "npm --workspace ./apps/duckworld-3d run build",
    "preview:2d": "npm --workspace ./apps/duckworld-2d run preview",
    "preview:3d": "npm --workspace ./apps/duckworld-3d run preview",
    "lint:3d": "npm --workspace ./apps/duckworld-3d run lint",
    "secret-scan:staged": "./scripts/secret-scan.sh --staged",
    "secret-scan:history": "./scripts/secret-scan.sh --history"
  }
}
